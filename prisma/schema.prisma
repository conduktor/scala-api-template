datasource db {
  provider = "postgresql"
  // format: postgresql://XX
  url      = env("DB_URL")
}


model Post {
  id        String     @id @default(uuid()) @db.Uuid
  title     String
  published Boolean @default(false)
  author  String
  content   String
  created_at  DateTime    @default(now())
 // needed if we want to keep our models Uppercase
  @@map(name: "post")
}